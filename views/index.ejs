<% include partials/header %> <!-- u can write ./partials/header , header is header.ejs-->

<div class="ui main text container">
	<div class="ui huge header">RESTful Blog App</div>
	<div class="ui top attached segment">  <!-- add border -->
		<div class="ui divided items"> <!-- automatic divided items -->
			<% blogs.forEach(function(blog){ %>
			<div class="item">

				<div class="title">
					<h2><%=blog.title%></h2>
				</div>
				<div class="image">
					<img src="<%=blog.image%>">
				</div>
				<div class="content">
					<span><%= blog.created.toDateString() %></span>
					<p><%= blog.body.substring(0,100) %>...</p> <!-- only show first 100 charceter of the body -->
					<a href="/blogs/<%= blog._id %>">Read More</a>  <!-- find blog id to show more information about the blog. u dont need :id in ejs, but u need to write :id in app.js   -->	
				</div>	
				
			</div>
			<% }) %>
		</div>
	</div>
</div>



<% include partials/footer %>

